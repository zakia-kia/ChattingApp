<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20dp"
    tools:context=".activity.VisitProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp">

            <ImageView
                android:id="@+id/cover_display_visit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_display_visit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/username_display_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_display_visit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:text="@string/text_user_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_visit_profile"
        android:layout_marginTop="40dp"
        android:background="@color/colorProfile"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_6dp">

        <ImageView
            android:id="@+id/facebook_display_visit"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/instagram_display_visit"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/website_display_visit"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/website" />

    </LinearLayout>

    <Button
        android:id="@+id/send_msg_btn_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="20dp"
        android:background="@color/colorProfile"
        android:text="@string/send_message"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />


</RelativeLayout>